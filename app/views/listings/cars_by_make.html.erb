<div class=container>

  <div class="container mt-5">
    <h2><i class="fas fa-percentage"></i> Percentual distribution of available cars by Make</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Make</th>
          <th scope="col">Distribution</th>
        </tr>
      </thead>
      <tbody>
        <% @makes.each do |row| %>
          <tr>
            <td><%= row[0] %></td>
            <td><%= (row[1].fdiv(@listings_count)*100).round %>%</td>
          </tr>
        <% end %>

      </tbody>
    </table>
    <div><%= link_to "Back", root_path %></div>
</div>
